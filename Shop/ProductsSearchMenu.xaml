<Window x:Class="Shop.ProductsSearchMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="Меню Товаров" Height="300" MinHeight="300" MaxHeight="300" Width="250" MinWidth="250" MaxWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Background="#FF7099D3" Content="Все товары" FontSize="20" BorderThickness="0"  Click="btnMenuAllProducts_Click"/>
        <Button Grid.Row="1" Background="#FF558CD8" Content="Добавить товар" FontSize="20" BorderThickness="0" Click="btnMenuAddProduct_Click"/>
        <Button Grid.Row="2" Background="#FF3175D3" Content="Поиск товаров" FontSize="20" BorderThickness="0" Click="btnMenuSearchProduct_Click"/>
        <Button Grid.Row="3" Background="#FF1061D4" Content="Поиск товаров по ID" FontSize="20" BorderThickness="0"/>
    </Grid>
</Window>
